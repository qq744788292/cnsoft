<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE mapper
    PUBLIC '-//mybatis.org//DTD Dao 3.0//EN' 
    'http://mybatis.org/dtd/mybatis-3-mapper.dtd' >
<!-- 数据字典管理 -->
<!-- 需要和DAO保持完全路径一致 -->
<mapper namespace='com.ttnn.business.cs.dao.DictionaryDao'> 

	<!-- 查询全体数据信息  -->
    <select id='getDictionaryOnTable' parameterType='FrameworkData' resultType='FrameworkData'>
        SELECT * FROM ${tablename}
        WHERE ddd != '1' and eb5 = #{eb5}
            <if test=" puk != null and puk !='' "><!-- 大分类ID -->
                AND puk = #{puk}
            </if>
            <if test=" k01 != null and k01 !='' "><!-- 大分类ID -->
                AND k01 = #{k01}
            </if>
            <if test=" k02 != null and k02 !='' "><!-- 中分类ID -->
                AND k02 = #{k02}
            </if>
            <if test=" k03 != null and k03 !='' "><!-- 小分类ID -->
                AND k03 = #{k03}
            </if>
    </select>

	<!-- 查询全体数据信息  -->
    <select id='getDictionaryDefault' parameterType='FrameworkData' resultType='FrameworkData'>
        SELECT puk,f01 FROM cssb01
        WHERE ddd != '1' and eb5 = #{eb5}
         <if test=" puk != null and puk !='' "><!-- 系统数据唯一识别ID（固定主键） -->
             AND puk = #{puk}
         </if>
         <if test=" k01 != null and k01 !='' "><!-- 大分类ID -->
             AND k01 = #{k01}
         </if>
         <if test=" k02 != null and k02 !='' "><!-- 中分类ID -->
             AND k02 = #{k02}
         </if>
         <if test=" k03 != null and k03 !='' "><!-- 小分类ID -->
             AND k03 = #{k03}
         </if>
    </select>
    
    <!-- 查询全体数据信息  -->
    <select id='getDictionaryName' parameterType='String' resultType='String'>
        SELECT f01 from cssb01 WHERE puk = #{puk}
    </select>

	<!-- 查询全体数据信息  -->
    <select id='getNameOnTable' parameterType='FrameworkData' resultType='String'>
        SELECT '${k01}' FROM ${tablename}
        WHERE puk = #{puk}
    </select>
    
    
</mapper>
